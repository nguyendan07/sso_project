# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_URL=sqlite:///db.sqlite3

# OIDC Provider Configuration
OIDC_RP_CLIENT_ID=your-client-id
OIDC_RP_CLIENT_SECRET=your-client-secret
OIDC_OP_AUTHORIZATION_ENDPOINT=https://your-provider/auth/endpoint
OIDC_OP_TOKEN_ENDPOINT=https://your-provider/token/endpoint
OIDC_OP_USER_ENDPOINT=https://your-provider/userinfo/endpoint
OIDC_OP_JWKS_ENDPOINT=https://your-provider/certs/endpoint

# OIDC Optional Settings
OIDC_RP_SIGN_ALGO=RS256
OIDC_RP_SCOPES=openid email profile

# Security Settings
HTTP_X_FORWARDED_PROTO=https